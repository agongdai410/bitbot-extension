{
  "manifest_version": 3,
  "name": "Web Viewer Extension",
  "version": "1.0",
  "description": "View any website in a side panel frame",
  "permissions": [
    "sidePanel",
    "scripting",
    "webRequest",
    "storage",
    "cookies",
    "tabs",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "fetch_service_worker.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src *"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.js", "popup.html", "popup.js", "icons/*"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Web Viewer",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
} 