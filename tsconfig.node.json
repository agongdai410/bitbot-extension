{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "utils",
    "./src/manifest.ts",
    "./src/types/**/*.ts",
    "package.json",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "@types/chrome"
    ]
  }
}